{# app/Resources/views/default/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>List</h1>

    <table>
        <tbody>
        {% for review in reviews %}
            <tr>
                <th>Review (id)</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Review Author</th>
                <td>{{ review.reviewAuthor }}</td>
            </tr>
            <tr>
                <th>User rated</th>
                <td>{{ review.userRated }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ review.text }}</td>
            </tr>
            <tr>
                <th>Publication Date</th>
                <td>{{ review.publicationDate }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ review.note }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="/">Return to homepage</a>
        </li>
    </ul>
{% endblock %}